<div class="login_form">
	<h2>Login</h2>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

		<%= f.email_field :email, autofocus: true, class: "user_input", placeholder: 'email' %>
		<br/>
		<%= f.password_field :password, autocomplete: "off", class: "user_input", placeholder: 'password' %>

		<% if devise_mapping.rememberable? -%>
			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		<% end -%>

		<%= f.submit "Sign in", class: "btn btn-default btn-lg btn-block" %>
	<% end %>

	<%= render "devise/shared/links" %>
</div>

